#/bin/bash

# A script that will recieve input and break depending on condition. 

while true; do
  read -p "enter a value between 1-10: " n
  if [[ "$n" -ge 1 && "$n" -le 25 ]] ;
  then
    echo "you have enter $n that is in 1-25"
  else
    echo "u entered a wrong value"
    break
  fi
done

echo "break happened"